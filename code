import serial
import numpy
import matplotlib.pyplot as plt
from drawnow import*

x = []
y = []
dados=[]
arduinoData = serial.Serial('COM3', 9600)
plt.ion()
x=0
i=input("NÂº de pontos plotados:")  
def makeFig():
    plt.plot(x, y, 'ro-')
    plt.title('T(t)')
    plt.grid(True)
    plt.grid('r', linestyle='--', linewidth=1)
    plt.ylim(0)  
    plt.xlim(0) 
    plt.ylabel('Temperatura (oC)')
    plt.xlabel('Tempo (ms)')
         
    
while True:
    while ( arduinoData.inWaiting()==0):
     pass
    arduinoString = arduinoData.readline()
    print arduinoString
    dataArray = arduinoString.split(',')
    tempo= float (dataArray[0])
    temperatura = float (dataArray[1])
    x.append(tempo)
    y.append(temperatura)
    dados.append(arduinoString)
	df = pd.DataFrame(dados)
	df.to_excel('TESTE.xlsx', 'Sheet1', index=False)
    x=x+1
    if (x<=i):
        drawnow(makeFig)
    else:
        plt.show(makeFig)
